@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@*Popup Kullanımı*@
<h2>Hakkımda Veri Listesi</h2>
<table class="table table-bordered">
    <tr>
        <td>ID    </td>
        <td>Hakkımda Başlığı  </td>
        <td>Aktif Yap   </td>
        <td>Pasif Yap Yap   </td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>Başlık</td>
           <td> <a href="#" class="btn btn-warning">Aktif Yap</a></td>
           <td> <a href="#" class="btn btn-danger">Pasif Yap</a></td>
        </tr>
    }
</table>

<button class="btn btn-primary" data-toggle="modal" data-target="#Modal">
    Yeni Hakkımızda yazı girişi
</button>

<div class="modal" id="Modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">
                    Hakkımızda metin girişi
                </h2>
            </div>
            <form method="post" action="/About/AddAbout/">

                <div class="modal-body">
                    <label>Hakkımda metin 1</label>
                    <input type="text" name="AboutDetails1" class="form-control" />
                    <br />
                    <label>Hakkımda metin 2</label>
                    <input type="text" name="AboutDetails2" class="form-control" />
                    <br />
                    <label>Hakkımda görsel 1</label>
                    <input type="text" name="AboutImage1" class="form-control" />
                    <br />
                    <label>Hakkımda görsel 2</label>
                    <input type="text" name="AboutImage2" class="form-control" />
                    <br />
                    <button class="btn btn-info">Kaydet</button>
                </div>
            </form>
        </div>
    </div>


    </div>

