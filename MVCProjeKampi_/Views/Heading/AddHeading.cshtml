@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<br />
@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">

        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName)
        <br />
        @Html.Label("Kategori ID")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new
   {
      @class = "form-control"
   })
        <br />
        @Html.Label("Yazar ID")
        @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)ViewBag.vlv, new
{
  @class = "form-control"
})

        <br />

        <button class="btn btn-info">Başlık Oluştur</button>
    </div>
}